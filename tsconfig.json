{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "jsx": "preserve",
    "pretty": true,
    "sourceMap": true,
    "target": "es2015",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "lib",
    "lib": ["es7", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./custom.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "muteNodeModules": true
  }
}
