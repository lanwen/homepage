{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "jsx": "react",
    "pretty": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "lib",
    "lib": ["es6", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./custom.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "muteNodeModules": true
  }
}
